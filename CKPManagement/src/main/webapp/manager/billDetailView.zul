			<div>
				<label id="pumps_name" value="Bơm đài móng"></label>
			</div>
		</div>
		<div>
			<div>Công trình:</div>
			<div>
				<label id="contruction_name"
					value="${arg.bill.constructionName}">
				</label>
			</div>
		</div>
		<div>
			<div>Địa chỉ công trình:</div>
			<div>
				<label value="${arg.bill.constructionName}"></label>
			</div>
		</div>

